<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait"
    tools:context="com.example.jake.LeagueStats.ItemBuilderRuneSelectionActivity">

    <TextView
        android:id="@+id/item_build_rune_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/item_build_rune_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/item_build_rune_select_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item_build_rune_title"
        android:padding="10dp"
        android:text="@string/item_build_rune_stats"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/item_build_rune_runeList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_build_rune_submit_button"
        android:layout_below="@+id/item_build_rune_select_stats"
        android:layout_centerHorizontal="true"
        android:padding="2dp" />

    <Button
        android:id="@+id/item_build_rune_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onSubmit"
        android:text="@string/item_build_rune_submit_button"/>
</RelativeLayout>
